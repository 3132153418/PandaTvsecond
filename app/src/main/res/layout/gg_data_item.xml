<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="115dp"
              android:background="#fbf9f9"
              android:orientation="vertical"
    android:id="@+id/gg_Linear">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="#fefdfd"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gg_image"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/lpanda_bottom_gra"/>

            <ImageView
                android:id="@+id/hongdian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="65dp"
                android:src="@drawable/lpanda_live_layer"
                />

            <TextView
                android:id="@+id/gg_len"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/hongdian"
                android:text="Live"
                android:textColor="#f9f5f5"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gg_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="465465432132136"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/gg_destri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="123132132132"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="#9f9b9b"></LinearLayout>
</LinearLayout>